<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.effortlogger.Logs">
   <center>
      <TableView fx:id="table" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0">
        <columns>
          <TableColumn prefWidth="152.0" text="Effort Log for Project 1">
               <columns>
                  <TableColumn fx:id="number" prefWidth="75.0" text="Number" />
                  <TableColumn fx:id="date" prefWidth="75.0" text="Date" />
               </columns>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Column X">
               <columns>
                  <TableColumn prefWidth="75.0" text="Time">
                     <columns>
                        <TableColumn fx:id="start" prefWidth="75.0" text="Start" />
                        <TableColumn fx:id="stop" prefWidth="75.0" text="Stop" />
                     </columns>
                  </TableColumn>
                  <TableColumn prefWidth="75.0" text="Delta">
                     <columns>
                        <TableColumn fx:id="time" prefWidth="75.0" text="Time" />
                     </columns>
                  </TableColumn>
               </columns>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Number of Entries">
               <columns>
                  <TableColumn fx:id="lifeCycle" prefWidth="75.0" text="Life Cycle Steps" />
               </columns>
            </TableColumn>
            <TableColumn fx:id="category" prefWidth="75.0" text="Effort Category" />
            <TableColumn fx:id="deliverable" prefWidth="75.0" text="Deliverable" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#switchToConsole" text="Console" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
